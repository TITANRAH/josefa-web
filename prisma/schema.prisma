generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       String   @default("ADMIN")
  created_at DateTime @default(now())
}

model Donacion {
  id            Int    @id @default(autoincrement())
  paymentId     String
  monto         String
  mensaje       String
  statusPayment String
}

model Articulo {
  id          Int    @id @default(autoincrement())
  nombre      String
  imagen      String
  descripcion String
}
